---
interface Props {
  title: string;
}

const { title } = Astro.props;
import "../assets/styles.css"
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="p-5">
    <section id="header">
      <h2 class="text-red font-bold text-2xl tracking-wide mb-2">FILTERIZER</h2>
    </section>
    <section id="main">
      <h3 class="text-yellow text-xl mb-2 tracking-wide">Neighborhoods</h3>
      <slot />
    </section>
    <section id="footer">
      <p class="text-sm">A one-page art show recommendation website from <a href="https://www.hoggardwagner.org/">Barry Hoggard and James Wagner</a>.</p>
    </section>
  </body>
</html>


